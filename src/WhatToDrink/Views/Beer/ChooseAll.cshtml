@model WhatToDrink.Models.BeerViewModels.ChooseAll

@{
    ViewData["Title"] = "What kind of beer should you drink?";
}

<h2>@ViewData["Title"]</h2>




<div class="form-group">
    <div class="col-md-10">
        @Html.DropDownList("Beer.SeasonId", @Model.SeasonId)
        <span asp-validation-for="Beer.SeasonId" class="text-danger" />
    </div>
</div>


<div class="form-group">
    <div class="col-md-10">
        @Html.DropDownList("Beer.FeelingId", @Model.FeelingId)
        <span asp-validation-for="Beer.StyleId" class="text-danger" />
    </div>
</div>


<div class="form-group">
    <div class="col-md-10">
        @Html.DropDownList("Beer.DayId", @Model.DayId)
        <span asp-validation-for="Beer.ABVId" class="text-danger" />
    </div>
</div>

<div id="AllBeersGoHere"></div>






@model WhatToDrink.Models.BeerViewModels.CreateBeer

@{
    ViewData["Title"] = "Add your beer";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    @Html.ValidationSummary()

    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Beer.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Beer.Name" class="form-control" />
                <span asp-validation-for="Beer.Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Beer.Brewery" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Beer.Brewery" class="form-control" />
                <span asp-validation-for="Beer.Brewery" class="text-danger" />
            </div>
        </div>
 
        <div class="form-group">
            <label asp-for="Beer.Style" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("Beer.StyleId", @Model.StyleId)
                <span asp-validation-for="Beer.StyleId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Beer.ABV" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("Beer.ABVId", @Model.ABVId)
                <span asp-validation-for="Beer.ABVId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
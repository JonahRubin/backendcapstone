@model WhatToDrink.Models.BeerViewModels.ChooseAll
@using WhatToDrink.Models


@{
    ViewData["Title"] = "Beer list";
}

<h2 class="top-buffer">@ViewData["Title"]</h2>

<div class="card-group">


    @foreach (var beer in Model.Beers)
    {
        <div class="card col-sm-4">
            <img class="card-img-top" src="@Html.DisplayFor(modelItem => beer.ImgUrl)" alt="Beer image">
            <div class="card-block">
                <h4 class="card-title"><a asp-action="Detail" asp-route-id="@beer.BeerId">@Html.DisplayFor(modelItem => beer.Name)</a></h4>
                <p class="card-text">@Html.DisplayFor(modelItem => beer.Brewery) @Html.DisplayFor(modelItem => beer.Style.Name)</p>
            </div>
        </div>
    
    }
</div>
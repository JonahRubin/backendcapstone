@model WhatToDrink.Models.BeerViewModels.ChooseSeason

@{
    ViewData["Title"] = "Beer list";
}

<h2 class="top-buffer">@ViewData["Title"]</h2>

@foreach (var beer in Model.Beers)
{
    <div class="row productRow">

        <div class="col-md-6"><a asp-action="Detail" asp-route-id="@beer.BeerId">@Html.DisplayFor(modelItem => beer.Name)</a></div>
        <div class="col-md-2">$@Html.DisplayFor(modelItem => beer.Brewery)</div>
        <div class="col-md-2">@Html.DisplayFor(modelItem => beer.Style.Name)</div>
        <div class="col-md-2">
        </div>
    </div>
}